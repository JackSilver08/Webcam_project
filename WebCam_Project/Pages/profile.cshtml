@page
@model WebCam_Project.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<style>
    :root {
        --bg-primary: #0f172a;
        --bg-secondary: #1e293b;
        --bg-tertiary: #334155; 
        --bg-card: rgba(15, 23, 42, 0.95);
        --text-primary: #f1f5f9;
        --text-secondary: #94a3b8;
        --text-accent: #60a5fa;
        --border-color: #475569;
        --border-active: #3b82f6;
        --success-color: #10b981;
        --danger-color: #ef4444;
        --warning-color: #f59e0b;
        --primary-color: #6366f1;
        --info-color: #0ea5e9;
        --shadow-light: rgba(0, 0, 0, 0.1);
        --shadow-medium: rgba(0, 0, 0, 0.25);
        --shadow-heavy: rgba(0, 0, 0, 0.4);
        --gradient-primary: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        --gradient-danger: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        --gradient-success: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    /* Base Styles */
    body {
        background: linear-gradient(135deg, var(--bg-primary) 0%, #1e1b4b 50%, var(--bg-primary) 100%);
        color: var(--text-primary);
        font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
        min-height: 100vh;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
        position: relative;
    }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.15) 0%, transparent 30%), radial-gradient(circle at 80% 70%, rgba(239, 68, 68, 0.1) 0%, transparent 30%), radial-gradient(circle at 40% 60%, rgba(16, 185, 129, 0.08) 0%, transparent 40%);
            z-index: -2;
            animation: gradientShift 15s ease-in-out infinite alternate;
        }

    @@keyframes gradientShift {
        0%

    {
        transform: translate(0, 0) scale(1);
    }

    100% {
        transform: translate(-50px, 50px) scale(1.1);
    }

    }

    body::after {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient( 0deg, transparent, transparent 2px, rgba(255, 255, 255, 0.02) 2px, rgba(255, 255, 255, 0.02) 4px );
        z-index: -1;
        pointer-events: none;
    }

    /* Container */
    .container {
        max-width: 1400px;
        padding-top: 2.5rem;
        padding-bottom: 3rem;
        position: relative;
    }

    /* Main Card */
    .card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        box-shadow: 0 20px 60px var(--shadow-heavy), 0 0 0 1px rgba(255, 255, 255, 0.05), inset 0 1px 0 rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 80px var(--shadow-heavy), 0 0 0 1px rgba(99, 102, 241, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.15);
            border-color: rgba(99, 102, 241, 0.5);
        }

    /* Card Header */
    .card-header {
        background: linear-gradient(90deg, rgba(99, 102, 241, 0.3) 0%, rgba(99, 102, 241, 0.1) 100%);
        border-bottom: 1px solid rgba(99, 102, 241, 0.3);
        padding: 1.75rem 2.5rem;
        font-weight: 700;
        font-size: 1.75rem;
        color: var(--text-primary);
        position: relative;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .card-header::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, var(--primary-color), rgba(99, 102, 241, 0.3) 70%);
        }

        .card-header i.fa-user {
            font-size: 2rem;
            filter: drop-shadow(0 0 10px rgba(99, 102, 241, 0.5));
        }

    /* Card Body */
    .card-body {
        padding: 2.5rem;
    }

    /* User Info Section - ĐÃ SỬA LỖI */
    .user-info-container {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.7) 0%, rgba(51, 65, 85, 0.5) 100%);
        border-radius: 18px;
        padding: 2rem;
        margin: 0 0 2rem 0;
        border: 1px solid rgba(71, 85, 105, 0.3);
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2), 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .user-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        background: rgba(15, 23, 42, 0.3);
        border-radius: 12px;
        padding: 1rem 1.25rem;
        border-left: 4px solid var(--primary-color);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .info-item:hover {
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(5px);
            border-left-color: var(--success-color);
        }

    .info-label {
        color: var(--text-accent);
        font-weight: 600;
        font-size: 1.1rem;
        min-width: 140px;
    }

    .info-value {
        color: var(--text-primary);
        font-weight: 500;
        font-size: 1.1rem;
        text-align: right;
        flex: 1;
    }

    /* Thêm badge cho số video */
    .info-item.video-count .info-value {
        position: relative;
        padding-right: 3rem;
    }

        .info-item.video-count .info-value::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            background: var(--gradient-success);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            min-width: 40px;
            text-align: center;
        }

    /* Divider */
    .card-divider {
        border: none;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--border-color), transparent);
        margin: 2.5rem 0;
        position: relative;
    }

        .card-divider::before {
            content: '📦';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: var(--bg-card);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            border: 2px solid var(--border-color);
            font-size: 1.2rem;
        }

    /* Section Title */
    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .section-title::before {
            content: '📦';
            font-size: 1.8rem;
            filter: drop-shadow(0 0 8px rgba(16, 185, 129, 0.5));
        }

    /* Table Styles - ĐÃ SỬA LỖI */
    .table-container {
        border-radius: 18px;
        overflow-x: auto;
        overflow-y: hidden;
        border: 1px solid var(--border-color);
        box-shadow: 0 8px 32px var(--shadow-medium), inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .data-table {
        width: 100%;
        background: rgba(15, 23, 42, 0.8);
        border-collapse: collapse;
        margin: 0;
        table-layout: auto;
    }

        .data-table thead {
            background: linear-gradient(90deg, rgba(99, 102, 241, 0.25) 0%, rgba(99, 102, 241, 0.1) 100%);
        }

        .data-table th {
            font-weight: 600;
            font-size: 1.1rem;
            padding: 1.25rem 1.5rem;
            border-bottom: 2px solid var(--primary-color);
            color: var(--text-accent);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            text-align: left;
        }

        .data-table td {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid rgba(71, 85, 105, 0.3);
            vertical-align: middle;
            color: var(--text-primary);
            transition: all 0.3s ease;
        }

        /* .data-table tbody tr {
            transition: all 0.3s ease;
            position: relative;
            background: transparent;
        }

            .data-table tbody tr:nth-child(even) {
                background: rgba(255, 255, 255, 0.02);
            }

            .data-table tbody tr::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 3px;
                background: linear-gradient(180deg, var(--primary-color), transparent);
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .data-table tbody tr:hover {
                background: rgba(99, 102, 241, 0.1) !important;
            }

                .data-table tbody tr:hover::before {
                    opacity: 1;
                } */

    /* Button Styles */
    .btn {
        border-radius: 14px;
        padding: 0.75rem 1.75rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: none;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .btn:hover::before {
            transform: translateX(100%);
        }

    .btn-view {
        background: transparent;
        border: 2px solid var(--info-color);
        color: var(--info-color);
        padding: 0.5rem 1.25rem;
        font-size: 0.9rem;
    }

        .btn-view:hover {
            background: var(--info-color);
            border-color: var(--info-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(14, 165, 233, 0.3);
        }

    .btn-logout {
        background: var(--gradient-danger);
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        font-size: 1.1rem;
        gap: 0.75rem;
    }

        .btn-logout:hover {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(239, 68, 68, 0.4);
        }

        .btn-logout::before {
            content: '🚪';
        }

    /* Footer Section */
    .action-footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(71, 85, 105, 0.3);
        text-align: right;
    }

    /* Empty State */
    .empty-state {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.6) 0%, rgba(51, 65, 85, 0.4) 100%);
        border: 2px dashed var(--border-color);
        border-radius: 16px;
        padding: 3rem 2rem;
        text-align: center;
        font-size: 1.2rem;
        color: var(--text-secondary);
        animation: pulseEmpty 2s infinite;
    }

    @@keyframes pulseEmpty {
        0%, 100%

    {
        border-color: var(--border-color);
        box-shadow: 0 0 0 0 rgba(71, 85, 105, 0);
    }

    50% {
        border-color: rgba(99, 102, 241, 0.5);
        box-shadow: 0 0 0 10px rgba(99, 102, 241, 0);
    }

    }

    /* Responsive Design */
    @@media (max-width: 1400px) {
        .container

    {
        max-width: 100%;
        padding-left: 2rem;
        padding-right: 2rem;
    }

    }

    @@media (max-width: 992px) {
        .container

    {
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

    .card-header {
        padding: 1.5rem 2rem;
        font-size: 1.5rem;
    }

    .card-body {
        padding: 2rem;
    }

    .user-info-container {
        padding: 1.5rem;
    }

    .data-table th,
    .data-table td {
        padding: 1rem 1.25rem;
    }

    }

    @@media (max-width: 768px) {
        .container

    {
        padding: 1.5rem;
    }

    .card-header {
        padding: 1.25rem 1.5rem;
        font-size: 1.3rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    .user-info-container {
        padding: 1rem;
    }

    .info-item {
        padding: 0.75rem 1rem;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }

    .info-label,
    .info-value {
        width: 100%;
        text-align: left;
    }

    .info-item.video-count .info-value {
        padding-right: 0;
        position: relative;
    }

        .info-item.video-count .info-value::after {
            position: static;
            transform: none;
            display: inline-block;
            margin-left: 1rem;
        }

    .table-container {
            overflow-x: auto;
            border-radius: 12px;
    }

        .data-table th,
        .data-table td {
            box-sizing: border-box;
            overflow: hidden;
            text-overflow: ellipsis;
        }
            /* Cột số thứ tự */ .data-table th:first-child, .data-table td:first-child {
                width: 60px;
                text-align: center;
            }
            /* Cột mã sản phẩm */

            .data-table th:nth-child(2), .data-table td:nth-child(2) {
                width: 30%;
                text-align: left;
            }
            /* Cột thời gian */

            .data-table th:nth-child(3), .data-table td:nth-child(3) {
                width: 40%;
                text-align: left;
            }
            /* Cột video */

            .data-table th:nth-child(4), .data-table td:nth-child(4) {
                width: 140px;
                text-align: center;
            }
    .btn {
        padding: 0.625rem 1.5rem;
        font-size: 0.95rem;
    }

    }

    @@media (max-width: 576px) {
        .container

    {
        padding: 1rem;
    }

    .card-header {
        padding: 1rem 1.25rem;
        font-size: 1.2rem;
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
    }

    .card-body {
        padding: 1.25rem;
    }

    .user-info-grid {
        grid-template-columns: 1fr;
    }

    /* Responsive table for mobile */
    .table-container {
        overflow-x: auto;
    }

   
    .btn {
        width: 100%;
        justify-content: center;
    }

    }

    /* Animation for table rows */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .data-table tbody tr {
        /* text-align: right; */
        animation: fadeInUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
        opacity: 0;
    }

        .data-table tbody tr:nth-child(1) {
            animation-delay: 0.1s;
        }

        .data-table tbody tr:nth-child(2) {
            animation-delay: 0.2s;
        }

        .data-table tbody tr:nth-child(3) {
            animation-delay: 0.3s;
        }

        .data-table tbody tr:nth-child(4) {
            animation-delay: 0.4s;
        }

        .data-table tbody tr:nth-child(5) {
            animation-delay: 0.5s;
        }

        .data-table tbody tr:nth-child(n+6) {
            animation-delay: 0.6s;
        }

  
    /* Scrollbar Styling */
    .table-container::-webkit-scrollbar {
        width: 10px;
        height: 10px;
    }

    .table-container::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background: linear-gradient(180deg, var(--primary-color), var(--info-color));
        border-radius: 10px;
        border: 2px solid rgba(15, 23, 42, 0.8);
    }

        .table-container::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(180deg, var(--primary-color), #0ea5e9);
        }

    /* Dark mode optimization */
    @@media (prefers-color-scheme: dark) {
        : root

    {
        --bg-card: rgba(15, 23, 42, 0.95);
    }

    }

    /* Print styles */
    @@media print {
        body

    {
        background: white !important;
        color: black !important;
    }

    .card {
        box-shadow: none !important;
        border: 1px solid #ccc !important;
        background: white !important;
    }

    .btn {
        display: none !important;
    }

    .data-table {
        background: white !important;
        color: black !important;
    }

        .data-table th {
            color: black !important;
        }

    }

  
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg">
                <div class="card-header bg-dark text-light fw-bold fs-4">
                    <i class="fas fa-user"></i> Thông tin tài khoản
                </div>

                <div class="card-body">

                    <!-- USER INFO -->
                    <div class="user-info-container">
                        <div class="user-info-grid">
                            <div class="info-item">
                                <span class="info-label">Username:</span>
                                <span class="info-value">@Model.UserInfo.Username</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Ngày tạo:</span>
                                <span class="info-value">@Model.UserInfo.CreatedAt.ToLocalTime()</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Role:</span>
                                <span class="info-value">@Model.UserInfo.Role</span>
                            </div>
                            <div class="info-item video-count">
                                <span class="info-label">Số video:</span>
                                <span class="info-value">@Model.Records.Count</span>
                            </div>
                        </div>
                    </div>

                    <div class="card-divider"></div>

                    <!-- RECORDS -->
                    <h5 class="section-title">Lịch sử đóng gói</h5>

                    @if (!Model.Records.Any())
                    {
                        <div class="empty-state">
                            Chưa có dữ liệu
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="data-table">
                                <thead> <tr> <th>#</th> <th>MÃ SẢN PHẨM</th> <th>THỜI GIAN</th> <th>VIDEO</th> </tr> </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Records.Count; i++)
                                    {
                                        var r = Model.Records[i];
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@r.ProductCode</td>
                                            <td>@r.CreatedAt.ToLocalTime()</td>
                                            <td>
                                                <a href="~/@r.VideoPath"
                                                   target="_blank"
                                                   class="btn btn-view">
                                                    <i class="fas fa-play"></i> Xem
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="action-footer">
                        <form method="post">
                            <button asp-page-handler="Logout"
                                    class="btn btn-logout">
                                Đăng xuất
                            </button>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>