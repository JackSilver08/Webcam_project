@page "/Profile"
@model WebCam_Project.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<style>
    :root {
        --bg-primary: #0f172a;
        --bg-secondary: #1e293b;
        --bg-tertiary: #334155;
        --border-color: #475569;
        --text-primary: #f8fafc;
        --text-secondary: #cbd5e1;
        --accent-danger: #dc2626;
        --accent-danger-hover: #b91c1c;
        --accent-primary: #3b82f6;
        --accent-primary-hover: #2563eb;
        --card-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        --transition-speed: 0.3s;
    }

    body {
        background: var(--bg-primary);
        color: var(--text-primary);
        font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
        line-height: 1.6;
        min-height: 100vh;
    }

    /* Card Styling */
    .card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        backdrop-filter: blur(10px);
        overflow: hidden;
        transition: transform var(--transition-speed) ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
        border-bottom: 1px solid var(--border-color);
        padding: 1.5rem 2rem;
        font-size: 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .card-header i {
            color: var(--accent-primary);
            font-size: 1.3rem;
        }

    .card-body {
        padding: 2rem;
    }

    /* User Info Section */
    .user-info-container {
        background: rgba(30, 41, 59, 0.6);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid var(--border-color);
    }

    .user-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .info-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        color: var(--text-primary);
        font-size: 1.1rem;
        font-weight: 600;
        padding: 0.5rem 0;
    }

    .video-count .info-value {
        color: var(--accent-primary);
        font-size: 1.3rem;
    }

    /* Divider */
    .card-divider {
        height: 1px;
        background: linear-gradient(90deg, transparent 0%, var(--border-color) 50%, transparent 100%);
        margin: 2rem 0;
    }

    /* Section Title */
    .section-title {
        color: var(--text-primary);
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid var(--accent-primary);
        display: inline-block;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: var(--text-secondary);
        background: rgba(30, 41, 59, 0.5);
        border-radius: 12px;
        border: 2px dashed var(--border-color);
        font-size: 1.1rem;
    }

    /* Table Container */
    .table-container {
        background: var(--bg-tertiary);
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--border-color);
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
        color: var(--text-primary);
    }

        .data-table thead {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
        }

        .data-table th {
            padding: 1rem 1.5rem;
            text-align: left;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--accent-primary);
        }

        .data-table td {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            vertical-align: middle;
        }

        .data-table tbody tr {
            transition: background-color var(--transition-speed) ease;
        }

            .data-table tbody tr:hover {
                background-color: rgba(255, 255, 255, 0.05);
            }

    /* Buttons */
    .btn {
        padding: 0.5rem 1.25rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all var(--transition-speed) ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-sm {
        padding: 0.375rem 0.875rem;
        font-size: 0.875rem;
    }

    .btn-view {
        background: var(--accent-primary);
        color: white;
    }

        .btn-view:hover {
            background: var(--accent-primary-hover);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

    .btn-danger {
        background: var(--accent-danger);
        color: white;
    }

        .btn-danger:hover {
            background: var(--accent-danger-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        }

    .btn-primary {
        background: var(--accent-primary);
        color: white;
    }

        .btn-primary:hover {
            background: var(--accent-primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

    /* Action Footer */
    .action-footer {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
        display: flex;
        justify-content: center;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .user-info-grid

    {
        grid-template-columns: 1fr;
    }

    .card-header {
        padding: 1.25rem;
        font-size: 1.25rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    .data-table {
        display: block;
        overflow-x: auto;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .card-body > * {
        animation: fadeIn 0.5s ease-out;
    }

    /* Form Styling */
    form {
        display: inline;
    }

    /* Scrollbar Styling */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: var(--bg-secondary);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--border-color);
        border-radius: 4px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--accent-primary);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-light fw-bold fs-4">
                    <i class="fas fa-user"></i> Thông tin tài khoản
                </div>

                <div class="card-body">
                    <!-- USER INFO -->
                    <div class="user-info-container">
                        <div class="user-info-grid">
                            <div class="info-item">
                                <span class="info-label">Username:</span>
                                <span class="info-value">
                                    @Model.UserInfo?.Username
                                </span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Ngày tạo:</span>
                                <span class="info-value">
                                    @(Model.UserInfo?.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "-")
                                </span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Role:</span>
                                <span class="info-value">
                                    @Model.UserInfo?.Role
                                </span>
                            </div>
                            <div class="info-item video-count">
                                <span class="info-label">Số video:</span>
                                <span class="info-value">@Model.Records.Count</span>
                            </div>
                        </div>
                    </div>

                    <div class="card-divider"></div>

                    <!-- RECORDS -->
                    <h5 class="section-title">Lịch sử đóng gói</h5>

                    @if (!Model.Records.Any())
                    {
                        <div class="empty-state">
                            Chưa có dữ liệu
                        </div>
                    }
                    else
                    {
                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>TÊN SẢN PHẨM</th>
                                        <th>MÃ SẢN PHẨM</th>
                                        <th>THỜI GIAN</th>
                                        <th>VIDEO</th>
                                        <th>HÀNH ĐỘNG</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Records.Count; i++)
                                    {
                                        var record = Model.Records[i];
                                        <tr>    
                                            <td>@(i + 1)</td>
                                            <td>
                                                @if (string.IsNullOrWhiteSpace(record.ProductName))
                                                {
                                                    <form method="post"
                                                          action="/Profile?handler=UpdateProductName"
                                                          class="d-flex gap-2">

                                                        @Html.AntiForgeryToken()

                                                        <input type="hidden" name="RecordId" value="@record.Id" />

                                                        <input type="text"
                                                               name="ProductName"
                                                               class="form-control form-control-sm"
                                                               maxlength="50"
                                                               placeholder="Nhập tên sản phẩm"
                                                               required />

                                                        <button type="submit" class="btn btn-primary btn-sm">
                                                            Lưu
                                                        </button>
                                                    </form>

                                                }
                                                else
                                                {
                                                    <span class="fw-semibold">@record.ProductName</span>
                                                }
                                            </td>
                                            <td>@record.ProductCode</td>
                                            <td>@record.CreatedAt.ToLocalTime()</td>
                                            <td>
                                                <a href="~/@record.VideoPath"
                                                   target="_blank"
                                                   class="btn btn-view">
                                                    <i class="fas fa-play"></i> Xem
                                                </a>
                                            </td>
                                            <td>
                                                <!-- FORM VỚI ANTI-FORGERY TOKEN -->
                                                <form method="post"
                                                      action="/Profile?handler=DeleteSingle&id=@record.Id"
                                                      onsubmit="return confirm('Xóa video @record.ProductCode?');"
                                                      style="display:inline">

                                                    @Html.AntiForgeryToken()  <!-- THÊM DÒNG NÀY -->

                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i> Xóa
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="action-footer">
                        <a href="/Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Trang Chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SCRIPT ĐƠN GIẢN -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Auto close alerts after 5 seconds
    setTimeout(function() {
        var alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            var bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
</script>
