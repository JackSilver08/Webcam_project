@page
@using WebCam_Project.Pages
@model IndexModel
@{
    ViewData["Title"] = "Packaging Camera System";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    :root {
        --bg-primary: #0f172a;
        --bg-secondary: #1e293b;
        --bg-tertiary: #334155;
        --bg-card: rgba(30, 41, 59, 0.9);
        --text-primary: #f1f5f9;
        --text-secondary: #94a3b8;
        --text-accent: #60a5fa;
        --border-color: #475569;
        --border-active: #3b82f6;
        --success-color: #10b981;
        --danger-color: #ef4444;
        --warning-color: #f59e0b;
        --primary-color: #6366f1;
        --shadow-light: rgba(0, 0, 0, 0.1);
        --shadow-medium: rgba(0, 0, 0, 0.2);
        --shadow-heavy: rgba(0, 0, 0, 0.3);
    }

    /* Base Styles */
    body {
        background: linear-gradient(135deg, var(--bg-primary) 0%, #1e1b4b 100%);
        color: var(--text-primary);
        font-family: 'Segoe UI', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        min-height: 100vh;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

        /* Background Animation */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 15% 25%, rgba(99, 102, 241, 0.15) 0%, transparent 25%), radial-gradient(circle at 85% 75%, rgba(239, 68, 68, 0.1) 0%, transparent 25%), radial-gradient(circle at 50% 50%, rgba(16, 185, 129, 0.08) 0%, transparent 35%);
            z-index: -2;
        }

        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: repeating-linear-gradient( 90deg, transparent, transparent 1px, rgba(255, 255, 255, 0.01) 1px, rgba(255, 255, 255, 0.01) 2px );
            z-index: -1;
            pointer-events: none;
        }

    /* Container */
    .container {
        max-width: 1400px;
        padding-top: 2rem;
        padding-bottom: 2rem;
        position: relative;
    }

    /* Cards */
    .card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        box-shadow: 0 8px 32px var(--shadow-heavy), inset 0 1px 0 rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 60px var(--shadow-heavy), inset 0 1px 0 rgba(255, 255, 255, 0.15);
            border-color: var(--border-active);
        }

    .card-header {
        background: linear-gradient(90deg, rgba(99, 102, 241, 0.25) 0%, rgba(99, 102, 241, 0.05) 100%);
        border-bottom: 1px solid rgba(99, 102, 241, 0.3);
        padding: 1.5rem 2rem;
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--text-primary);
        position: relative;
    }

        .card-header::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, var(--primary-color), transparent 70%);
        }

    .card-body {
        padding: 2rem;
    }

    /* Video Preview */
    #preview {
        border-radius: 16px;
        border: 2px solid var(--border-color);
        box-shadow: 0 8px 32px var(--shadow-medium), inset 0 0 0 1px rgba(255, 255, 255, 0.05);
        background: #000;
        transition: all 0.3s ease;
        max-height: 420px;
        object-fit: cover;
        position: relative;
    }

        #preview::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 14px;
            background: linear-gradient( 45deg, transparent 30%, rgba(99, 102, 241, 0.1) 50%, transparent 70% );
            animation: shimmer 3s infinite;
            z-index: 1;
            pointer-events: none;
        }

    @@keyframes shimmer {
        0%

    {
        transform: translateX(-100%);
    }

    100% {
        transform: translateX(100%);
    }

    }

    #preview:hover {
        border-color: var(--primary-color);
        box-shadow: 0 12px 40px rgba(99, 102, 241, 0.25), inset 0 0 0 1px rgba(99, 102, 241, 0.3);
        transform: scale(1.005);
    }

    /* Timer */
    #timer {
        font-family: 'JetBrains Mono', 'Cascadia Code', 'Consolas', monospace;
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--success-color);
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(16, 185, 129, 0.05) 100%);
        border: 2px solid rgba(16, 185, 129, 0.3);
        border-radius: 16px;
        padding: 1rem 2rem;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        margin: 1.5rem 0;
        box-shadow: 0 4px 20px rgba(16, 185, 129, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }

        #timer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient( 90deg, transparent, rgba(255, 255, 255, 0.1), transparent );
            animation: timerGlow 2s infinite;
        }

    @@keyframes timerGlow {
        0%

    {
        transform: translateX(-100%);
    }

    100% {
        transform: translateX(100%);
    }

    }

    /* Buttons */
    .btn {
        border-radius: 14px;
        padding: 0.875rem 2.25rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        box-shadow: 0 4px 15px var(--shadow-medium), inset 0 1px 0 rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
        min-width: 140px;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .btn:hover::before {
            transform: translateX(100%);
        }

    .btn-success {
        background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);
        color: white;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
        }

    .btn-danger {
        background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
        color: white;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
        }

    .btn:disabled {
        opacity: 0.5;
        transform: none !important;
        box-shadow: none !important;
        cursor: not-allowed;
    }

        .btn:disabled::before {
            display: none;
        }

    /* Control Buttons Container */
    .d-flex.justify-content-center.gap-2 {
        gap: 1.5rem !important;
        margin: 2rem 0;
    }

    /* Status Alert */
    #status {
        border-radius: 16px;
        border: 1px solid var(--border-color);
        padding: 1.25rem 1.75rem;
        font-weight: 600;
        font-size: 1.1rem;
        box-shadow: 0 4px 20px var(--shadow-light), inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        margin-bottom: 0;
        position: relative;
        overflow: hidden;
    }

        #status::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: currentColor;
            opacity: 0.3;
        }

    .alert-secondary::before {
        background: var(--text-secondary);
    }

    .alert-success::before {
        background: var(--success-color);
    }

    .alert-danger::before {
        background: var(--danger-color);
    }

    .alert-primary::before {
        background: var(--primary-color);
    }

    /* Log Section */
    #log {
        max-height: 380px;
        overflow-y: auto;
        padding-right: 5px;
        margin: 0;
    }

        /* Custom Scrollbar */
        #log::-webkit-scrollbar {
            width: 8px;
        }

        #log::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            margin: 4px 0;
        }

        #log::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, var(--primary-color), var(--success-color));
            border-radius: 10px;
            border: 2px solid var(--bg-card);
        }

            #log::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(180deg, var(--primary-color), #10b981);
            }

    /* Log Items */
    .list-group-item {
        background: linear-gradient(90deg, rgba(30, 41, 59, 0.8) 0%, rgba(30, 41, 59, 0.6) 100%);
        border: 1px solid var(--border-color);
        border-radius: 14px !important;
        margin-bottom: 0.875rem;
        padding: 1.25rem;
        color: var(--text-primary);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 1rem;
        position: relative;
        overflow: hidden;
    }

        .list-group-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 3px;
            height: 100%;
            background: linear-gradient(180deg, var(--success-color), var(--primary-color));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .list-group-item:hover {
            background: linear-gradient(90deg, rgba(51, 65, 85, 0.8) 0%, rgba(51, 65, 85, 0.6) 100%);
            transform: translateX(8px);
            border-color: var(--border-active);
            box-shadow: 0 8px 25px var(--shadow-medium), inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }

            .list-group-item:hover::before {
                opacity: 1;
            }

        .list-group-item strong {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.1rem;
            background: linear-gradient(90deg, var(--text-primary), var(--text-accent));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .list-group-item .float-end {
            color: var(--text-secondary);
            font-size: 0.9rem;
            font-weight: 500;
            background: var(--bg-tertiary);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            border: 1px solid var(--border-color);
        }

    /* Empty Log Placeholder */
    #log:empty::after {
        content: '📦 Chưa có mã nào được scan';
        display: block;
        text-align: center;
        color: var(--text-secondary);
        padding: 3rem 1rem;
        font-style: italic;
        font-size: 1.1rem;
    }

    /* Scanner Input */
    #scanner {
        position: absolute;
        left: -9999px;
        opacity: 0;
        pointer-events: none;
    }

    /* Responsive Design */
    @@media (max-width: 1400px) {
        .container

    {
        max-width: 100%;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
    }

    }

    @@media (max-width: 992px) {
        .container

    {
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }

    .card-header {
        padding: 1.25rem 1.5rem;
        font-size: 1.3rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    #timer {
        font-size: 1.5rem;
        padding: 0.875rem 1.75rem;
    }

    .btn {
        padding: 0.75rem 1.75rem;
        min-width: 120px;
    }

    }

    @@media (max-width: 768px) {
        .row.g-4

    {
        gap: 1.5rem !important;
    }

    #preview {
        max-height: 320px;
    }

    .d-flex.justify-content-center.gap-2 {
        flex-direction: column;
        align-items: stretch;
        gap: 1rem !important;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .list-group-item {
        padding: 1rem;
        gap: 0.75rem;
    }

    }

    @@media (max-width: 576px) {
        .container

    {
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .card-header {
        padding: 1rem;
        font-size: 1.1rem;
    }

    .card-body {
        padding: 1rem;
    }

    #timer {
        font-size: 1.25rem;
        padding: 0.75rem 1.5rem;
    }

    #status {
        padding: 1rem 1.25rem;
        font-size: 1rem;
    }

    }

    /* Animation for new log entries */
    @@keyframes slideInFromTop {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .list-group-item {
        animation: slideInFromTop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    /* Animation for status changes */
    @@keyframes statusPulse {
        0%

    {
        box-shadow: 0 4px 20px var(--shadow-light), inset 0 1px 0 rgba(255, 255, 255, 0.1), 0 0 0 0 rgba(99, 102, 241, 0.2);
    }

    70% {
        box-shadow: 0 4px 20px var(--shadow-light), inset 0 1px 0 rgba(255, 255, 255, 0.1), 0 0 0 15px rgba(99, 102, 241, 0);
    }

    100% {
        box-shadow: 0 4px 20px var(--shadow-light), inset 0 1px 0 rgba(255, 255, 255, 0.1), 0 0 0 0 rgba(99, 102, 241, 0);
    }

    }

    .alert-success {
        animation: statusPulse 2s infinite;
    }

    /* Focus states for accessibility */
    .btn:focus-visible,
    #preview:focus-visible {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.3);
    }

    /* Dark mode adjustments */
    @@media (prefers-color-scheme: dark) {
        : root

    {
        --bg-card: rgba(30, 41, 59, 0.95);
    }

    }

    /* Print styles */
    @@media print {
        .btn, #scanner, #preview, #timer

    {
        display: none !important;
    }

    .card {
        box-shadow: none !important;
        border: 1px solid #ccc !important;
    }

    #log {
        max-height: none !important;
        overflow: visible !important;
    }

    }
</style>
