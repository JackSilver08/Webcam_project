<script>
    const isAuthenticated =
    @((User.Identity?.IsAuthenticated ?? false).ToString().ToLower());

    /* ================== STATE ================== */
    let stream = null;
    let mediaRecorder = null;
    let recordedChunks = [];
    let running = false;

    let timerStart = null;
    let timerInterval = null;

    let scanBuffer = "";
    let scannedSet = new Set();

    /* ================== ELEMENTS ================== */
    const video = document.getElementById("preview");
    const status = document.getElementById("status");
    const log = document.getElementById("log");
    const scanner = document.getElementById("scanner");

    const btnStart = document.getElementById("btnStart");
    const btnStop = document.getElementById("btnStop");
    const timer = document.getElementById("timer");
    const antiForgeryToken =
    document.querySelector('input[name="__RequestVerificationToken"]').value;

    /* ================== CAMERA ================== */
    async function initCamera() {
        stream = await navigator.mediaDevices.getUserMedia({
            video: true,
            audio: false
        });
        video.srcObject = stream;
    }

    /* ================== RECORD ================== */
        function startRecording() {
        recordedChunks = [];
        mediaRecorder = new MediaRecorder(stream);

        mediaRecorder.ondataavailable = e => {
            if (e.data.size > 0) recordedChunks.push(e.data);
        };

        mediaRecorder.start();
    }

        function stopCurrentRecording(productCode) {
        return new Promise(resolve => {
            mediaRecorder.onstop = async () => {
                if (recordedChunks.length === 0) {
                    console.error("❌ No recorded chunks");
                    resolve();
                    return;
                }

                const blob = new Blob(recordedChunks, { type: "video/webm" });
                await uploadVideo(productCode);

                resolve();
            };

            mediaRecorder.stop();
        });
    }


    /* ================== TIMER ================== */
    function startTimer() {
        timerStart = Date.now();
        timerInterval = setInterval(() => {
            const d = Date.now() - timerStart;
            const h = String(Math.floor(d / 3600000)).padStart(2, "0");
            const m = String(Math.floor(d / 60000) % 60).padStart(2, "0");
            const s = String(Math.floor(d / 1000) % 60).padStart(2, "0");
            timer.innerText = `⏱️ ${h}:${m}:${s}`;
        }, 1000);
    }

    function resetTimer() {
        clearInterval(timerInterval);
        timer.innerText = "⏱️ 00:00:00";
    }

    /* ================== UPLOAD ================== */
       async function uploadVideo(productCode) {
        const blob = new Blob(recordedChunks, { type: "video/webm" });

        const formData = new FormData();
        formData.append("video", blob, `${productCode}.webm`);
        formData.append("product_code", productCode);

        console.log("📦 Upload:", [...formData.entries()]);

          const res = await fetch("/Index?handler=Upload", {
        method: "POST",
        headers: {
            "RequestVerificationToken": antiForgeryToken
        },
        body: formData
    });

        if (!res.ok) {
            console.error("❌ Upload failed", await res.text());
        } else {
            console.log("✅ Upload OK:", productCode);
        }
    }

    /* ================== SCAN ================== */
    setInterval(() => scanner.focus(), 300);

       scanner.addEventListener("keydown", async e => {
        if (!running) return;

        if (e.key === "Enter") {
            e.preventDefault();

            const code = scanBuffer.trim();
            scanBuffer = "";

            if (!code) return;
                if (scannedSet.has(code)) {
        // Quét trùng → reset toàn bộ về trạng thái ban đầu
        resetToIdle();
        return;
    }

            scannedSet.add(code);
            appendLog(code);
            setStatus(`✅ Scan: ${code}`, "primary");

            await stopCurrentRecording(code);

            resetTimer();
            startRecording();
            startTimer();
        } else {
            scanBuffer += e.key;
        }
    });

    /* ================== UI ================== */
    function appendLog(code) {
        const li = document.createElement("li");
        li.className = "list-group-item small";
        li.innerHTML = `✔ <strong>${code}</strong>
            <span class="float-end text-muted">
                ${new Date().toLocaleTimeString()}
            </span>`;
        log.prepend(li);
    }

    function setStatus(text, type) {
        status.className = `alert alert-${type}`;
        status.innerText = text;
    }

    /* ================== CONTROL ================== */
       btnStart.onclick = async () => {
           if (!isAuthenticated) {
        authModal.show();
        return;
    }

        if (running) return;

        await initCamera();
        startRecording();
        startTimer();

        running = true;
        btnStart.disabled = true;
        btnStop.disabled = false;

